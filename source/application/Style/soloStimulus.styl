.SoloStimulusContainer {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-content: center;
    justify-content: center;
    align-items: center;
    justify-items: center;
}

.video-calibration-point {
    float: right;
    border-radius: 50px;
    width: 50px;
    height: 50px;
    /*position: absolute;
    top: 5vw;
    left: calc(50vw - 25px);*/
    z-index: 9999;
    background-color: red;
    transition: transform 0.2s;
}

@-webkit-keyframes pulsate-keyframes {
    100% {-webkit-transform: scale(1.0, 1.0); opacity: 0.9; }
    66%  {-webkit-transform: scale(1.1, 1.1); opacity: 0.8; }
    33%  {-webkit-transform: scale(0.9, 0.9); opacity: 1.0; }
    0%   {-webkit-transform: scale(1.0, 1.0); opacity: 0.9; }
}

@keyframes pulsate-keyframes2 {
    100% {opacity: 1.0; }
    0% {opacity: 0.8; }
}

.calibrated {
    background-color: limegreen;
    transform: scale(0.7);
}

.pulsate {
    
    animation: pulsate-keyframes2 1s ease-in-out;
    animation-iteration-count: infinite; 
    opacity: 0.0;
/*
