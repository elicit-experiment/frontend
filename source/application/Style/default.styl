label.radio-button-group {
  display: block;
  padding-left: 20px;
  cursor: inherit;
}

label.checkbox-button-group > input[type=checkbox],
label.radio-button-group > input[type=radio] {
  float: left;
  width: 20px;
  margin-left: -20px;
  padding: 0;
  -webkit-appearance: radio;
}

label.radio-button-group > span {
  display: inline-block;
  margin: 0 0 0 10px;
}

.swal2-content {
  font-size: 1.8em !important;
  font-weight: 300;
}

.swal2-content > div {
  text-align: left;
}

ul.calibrate-instructions {
  text-align: left;
}

.swal2-content > div > ul > li,
ul.calibrate-instructions > li {
