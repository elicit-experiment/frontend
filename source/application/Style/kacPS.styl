.KAcPS .Scale {
	margin: 0 auto;
	display: table;
	min-width: 50%;
}

.KAcPS .Scale .Item {
	display: table-cell;
	height: 50px;
	padding: 5px;
	text-align: center;
}

.KAcPS .Scale .Item > div > button {
	display: block;
	margin: 0 auto;
}

.KAcPS .Scale input[type="radio"]  {
	display: none;
}

.KAcPS .Scale .Item > label {
	margin-top: 10px;
	min-width: 50px;
	vertical-align: bottom;
}

.KAcPS .Scale .Item > .Filler {
	visibility: hidden;
}

.KAcPS .Scale .Item > .Stimulus~label {

	margin-top: 10px;
}

.KAcPS .Scale input[type="radio"]+label .glyphicon  {
	display: none;
}

.KAcPS .Scale input[type="radio"]:checked+label .glyphicon  {
	display: inline;
}