
label.checkbox-button-group,
label.radio-button-group {
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  position: relative;
  padding-left: 15px;
  cursor: inherit;
  margin: auto;
}

label.radio-button-group {
}

label.checkbox-button-group > input[type=checkbox],
label.radio-button-group > input[type=radio] {
  margin-right: 1rem;
  margin-top: 0.4rem;
  padding: 0;
}

label.radio-button-group > input[type=radio] {
  -webkit-appearance: radio;
}

label.radio-button-group > span,
label.checkbox-button-group > span {
  display: inline-block;
  margin: 0;
}

.QuestionBlock > .row {
  &.correct {
    border: 2px solid green;
    padding: 0.1rem 2.0rem !important;
  }
  &.correct.feedback {
    background: green;
    font-weight: bold;
    color: white;
  }
  &.incorrect {
    border: 2px solid red;
    padding: 0.1rem 2.0rem !important;
  }
  &.incorrect.feedback {
    background: red;
    font-weight: bold;
    color: white;
  }
}

.feedback {
  margin-top: 1.5rem;
  padding: 1rem 2.0rem !important;

  .correctness-icon {
    right: 4em;
  }
}

.correctable-question {
  position: relative;
}

.incorrect .correctness-icon, .highlight-result-icon.incorrect {
  color: red;
}
.correct .correctness-icon, .highlight-result-icon.correct {
  color: green;
}

.correctness-icon {
  position: absolute;

  &.group-result {
    right: 2em;
    top: calc(50% - 18px);
    font-size: 36px;
  }
}

.highlight-result-icon {
  position: absolute;
  left: 0;

  &.individual {
    font-size: unset;
    left: -3.6em;
    top: 0;
  }

  &.correct.individual:before,
  &.incorrect.individual:before {
    content: 'â®•'
  }

  &.group-result {
    right: -1em;
    top: calc(50% - 18px);
    font-size: 36px;
  }
}
