.LikertScale
	.Scale 
		margin 0 auto
		display table
		min-width 50%

		> label
			position relative
			display table-cell

			> input 
				position relative
				display inline-block
				margin-left auto
				margin-right auto
				z-index 100

			> spanlast-child 
				width 100%
				display inline-block

		.Line
			position absolute
			top 10px
			height 1px
			border-top 1px solid grey
			z-order -10

		.Line-Right
			left 50%
			width 50%

		.Line-Left
			left -50%
			width 100%

		label:last-of-type .Line-Right
			display:none

		label:first-of-type .Line-Left
			display:none
