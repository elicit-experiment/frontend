.Rotating {
	-webkit-animation: Rotating 1s linear 0s infinite;
	animation: Rotating 1s linear 0s infinite;
}

@keyframes Rotating {
	from { transform: rotate(0); }
	to { transform: rotate(359deg); }
}

@-webkit-keyframes Rotating {
	from { transform: rotate(0); }
	to { transform: rotate(359deg); }
}

