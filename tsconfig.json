{
    "compilerOptions": {
		"noImplicitAny": true,
		"module": "amd",
		"outDir": "app",
        "target": "es5",
        "moduleResolution": "classic",
        "types": [ "youtube" ],
        "lib": ["es2017", "dom", "es6"],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "baseUrl": "./source/",
        "paths": {
            "Components/*": ["application/Components"],
            "Managers/*": ["application/Managers"],
            "Models/*": ["application/Models"],
            "Images/*": ["application/Images"],
            "Utility/*": ["application/Utility"],
            "KnockoutBindings/*": ["application/KnockoutBindings"]
        }
    },
    "include": [
        "source/**/*.ts", "source/**/*.html", "source/**/*.json", "global.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
