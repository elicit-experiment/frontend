{
    "compilerOptions": {
		"noImplicitAny": false,
		"module": "es2020",
		"outDir": "app",
        "target": "es2020",
        "types": [ "youtube" ],
        "lib": ["es2019", "dom", "es6"],
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "baseUrl": "./source/",
        "paths": {
            "Components/*": ["application/Components/*"],
            "Managers/*": ["application/Managers/*"],
            "Models/*": ["application/Models/*"],
            "Images/*": ["application/Images/*"],
            "Utility/*": ["application/Utility/*"],
            "KnockoutBindings/*": ["application/KnockoutBindings/*"],
            "PortalClient": ["../dependencies/PortalClient/PortalClient.min.js"],
        }
    },
    "include": [
        "source/**/*.ts", "source/**/*.html", "source/**/*.json", "global.d.ts", "TypeScriptDefinitions/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
